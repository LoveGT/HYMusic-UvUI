{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home-music/index",
      "style": {
        "navigationBarTitleText": "音樂"
      }
    },
    {
      "path": "pages/home-video/index",
      "style": {
        "navigationBarTitleText": "视频",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/profile/index",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录",
        "enablePullDownRefresh": true
      }
    }
  ],
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home-music/index",
        "iconPath": "static/images/tabbar/music_normal.png",
        "selectedIconPath": "static/images/tabbar/music_active.png",
        "text": "音乐"
      },
      {
        "pagePath": "pages/home-video/index",
        "iconPath": "static/images/tabbar/video_normal.png",
        "selectedIconPath": "static/images/tabbar/video_active.png",
        "text": "视频"
      },
      {
        "pagePath": "pages/profile/index",
        "iconPath": "static/images/tabbar/profile_normal.png",
        "selectedIconPath": "static/images/tabbar/profile_active.png",
        "text": "视频"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
